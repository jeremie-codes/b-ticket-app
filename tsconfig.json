{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "screens/*": ["src/screens/*"],
      "components/*": ["src/components/*"],
      "hooks/*": ["src/hooks/*"],
      "utils/*": ["src/utils/*"],
      "contexts/*": ["src/contexts/*"],
      "services/*": ["src/services/*"],
      "navigations/*": ["src/navigation/*"],
      "themes/*": ["src/themes/*"],
      "constants/*": ["src/constants/*"],
      "types/*": ["src/types/*"],
      "assets/*": ["src/assets/*"],

      "buttons": ["src/components/ui/texts/buttons/index"],
      "img": ["src/assets/img/*"],
      "text": ["src/components/ui/texts/buttons/index"]
    }
  }
}
